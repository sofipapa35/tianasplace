{% extends 'base-admin.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
	<h1>Produit</h1>
	<a href="{{ path('admin_product_index') }}" class="btn btn-secondary">Retourner Ã  la liste</a>

	<table class="table ">
		<tbody>
			<tr>
				<th class="col-3">Id</th>
				<td>{{ product.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ product.title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ product.description|raw }}</td>
			</tr>
			<tr>
				<th>Prix</th>
				<td>{{ product.price }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>
					{% if product.imageName %}
						<img src="{{ asset('images/menu/' ~ product.imageName) }}" alt="{{product.title}}" class="img-list">
					{% else %}
						<img src="{{ asset('images/default/laCarte-fork-knif.jpg') }}" alt="{{product.title}}" class="img-list">
					{% endif %}
				</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Delivery</th>
				<td>{{ product.addCart ? '<i class="align-middle" data-feather="check"></i>' : '<i class="align-middle" data-feather="x"></i>' }}</td>
			</tr>
			<tr>
				<th>Active</th>
				<td>{{ product.active ? '<i class="align-middle" data-feather="check"></i>' : '<i class="align-middle" data-feather="x"></i>' }}</td>
			</tr>
		</tbody>
	</table>


	<a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-success mb-2">
		<i class="align-middle" data-feather="edit"></i>
	</a>

	{{ include('admin_product/_delete_form.html.twig') }}
{% endblock %}
